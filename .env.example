# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_server_id_here

# ===========================================
# MySQL Configuration
# ===========================================
# Choose your setup:
#
# Option A: MariaDB in same Docker stack (docker-compose.full.yml)
#   - Use MYSQL_HOST=mariadb (container name)
#
# Option B: MariaDB from Synology Package Center
#   - Use MYSQL_HOST=192.168.x.x (your NAS IP)
#
# Option C: External MySQL server
#   - Use MYSQL_HOST=your.mysql.server.com
# ===========================================

# For docker-compose.full.yml (MariaDB in same stack)
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_USER=nyt_bot
MYSQL_PASSWORD=your_password_here

# Wordle Database
WORDLE_MYSQL_HOST=mariadb
WORDLE_MYSQL_USER=nyt_bot
WORDLE_MYSQL_PASS=your_password_here
WORDLE_MYSQL_DB_NAME=nyt_wordle

# Connections Database
CONNECTIONS_MYSQL_HOST=mariadb
CONNECTIONS_MYSQL_USER=nyt_bot
CONNECTIONS_MYSQL_PASS=your_password_here
CONNECTIONS_MYSQL_DB_NAME=nyt_connections

# Strands Database
STRANDS_MYSQL_HOST=mariadb
STRANDS_MYSQL_USER=nyt_bot
STRANDS_MYSQL_PASS=your_password_here
STRANDS_MYSQL_DB_NAME=nyt_strands

# Pips Database
PIPS_MYSQL_HOST=mariadb
PIPS_MYSQL_USER=nyt_bot
PIPS_MYSQL_PASS=your_password_here
PIPS_MYSQL_DB_NAME=nyt_pips

# Optional Settings
CONFIRM_ENTRIES=True
